<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>AddCriminalDetails</servlet-name>
        <servlet-class>servlets.AddCriminalDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteDonePage</servlet-name>
        <servlet-class>servlets.DeleteDonePage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCriminalDetails</servlet-name>
        <url-pattern>/AddCriminalDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteDonePage</servlet-name>
        <url-pattern>/DeleteDonePage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateCriminalDetails</servlet-name>
        <servlet-class>servlets.UpdateCriminalDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCriminalDetails</servlet-name>
        <url-pattern>/UpdateCriminalDetails</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCriminalDetails</servlet-name>
        <servlet-class>servlets.DeleteCriminalDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCriminalDetails</servlet-name>
        <url-pattern>/DeleteCriminalDetails</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ReadCriminalDetails</servlet-name>
        <servlet-class>servlets.ReadCriminalDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReadCriminalDetails</servlet-name>
        <url-pattern>/ReadCriminalDetails</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
